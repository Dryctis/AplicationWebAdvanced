@model clsModels.Articulo 

@{
    ViewData["Title"] = "Detalle articulo";
    //Convertir la cadena  a un objeto DateTime
    DateTime fechaCreacion = DateTime.Parse(Model.fechaCreacion);

    //Formatear la fecha como una cadena usando ToString con el formato deseado
    string fechaFormateada = fechaCreacion.ToString("dd/MM/yyyy");
}

</br>
<div class="container">
    <div class="card-header bg-light text-light ">
        <div class="col-12">
            <h1 class="text-primary text-center">@Model.nombre</h1>
        </div>
        <div class="col-12">
            <p class="text-muted">Fecha:@fechaFormateada</p>
        </div>
        </div>
        <div class="card-body">
            <div class="col-12">
                <img src="@Model.urlImagen" class="img-thumbnail mx-auto d-block" />
                @* htm.raw para impedir vulnerabilidades, que convierte los caracteres que se usan en programacion(javascript), parentesis angulares, comillas
                y los convierte a su equivalente en HTML *@
                <p class="text-secondary">@Html.Raw(Model.descripcion)</p>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
               <div class="col-12 col-md-6 pb-1">
                   <a asp-action="Index" class="btn btn-success btn-sm">Volver atras</a>
               </div>
        </div>
    </div>

</div>
