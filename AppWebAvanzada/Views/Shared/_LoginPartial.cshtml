@using Microsoft.AspNetCore.Identity
@using clsModels
@inject SignInManager<AplicationUser> SignInManager
@inject UserManager<AplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola, @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link" >Cerrar sesion</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="btn btn-registro" asp-area="Identity" asp-page="/Account/Register">Registro</a>
    </li>
    <li class="nav-item">
            <a class="btn btn-acceder" asp-area="Identity" asp-page="/Account/Login">Acceder</a>
    </li>
}
</ul>
